<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_primary">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="88dp"
        android:theme="@style/ShapeAppearanceOverlay.App.CornerSize2Percent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".85"
        app:srcCompat="@drawable/amusement_park" />

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/song_name"
        android:textColor="@color/dark_primary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/iv_cover"
        app:layout_constraintTop_toBottomOf="@+id/iv_cover" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/song_author"
        android:textColor="@color/primary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_song_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_song_name" />

    <ProgressBar
        android:id="@+id/pb_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/iv_cover"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_author" />


    <ImageButton
        android:id="@+id/img_btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/img_btn_fast_rewind"
        app:layout_constraintEnd_toStartOf="@+id/img_btn_fast_forward"
        app:layout_constraintStart_toEndOf="@+id/img_btn_fast_rewind"
        app:layout_constraintTop_toTopOf="@+id/img_btn_fast_rewind"
        app:srcCompat="@drawable/ic_baseline_pause_48" />

    <ImageButton
        android:id="@+id/img_btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/img_btn_fast_rewind"
        app:layout_constraintEnd_toStartOf="@+id/img_btn_fast_forward"
        app:layout_constraintStart_toEndOf="@+id/img_btn_fast_rewind"
        app:layout_constraintTop_toTopOf="@+id/img_btn_fast_rewind"
        app:srcCompat="@drawable/ic_baseline_play_arrow_48" />

    <ImageButton
        android:id="@+id/img_btn_fast_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_btn_fast_rewind"
        app:layout_constraintEnd_toEndOf="@+id/pb_progress"
        app:layout_constraintTop_toTopOf="@+id/img_btn_fast_rewind"
        app:srcCompat="@drawable/ic_baseline_fast_forward_48" />

    <ImageButton
        android:id="@+id/img_btn_fast_rewind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@+id/pb_progress"
        app:layout_constraintTop_toBottomOf="@+id/pb_progress"
        app:srcCompat="@drawable/ic_baseline_fast_rewind_48" />

    <TextView
        android:id="@+id/tv_already_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_played"
        android:textColor="@color/primary"
        app:layout_constraintStart_toStartOf="@+id/pb_progress"
        app:layout_constraintTop_toBottomOf="@+id/pb_progress" />

    <TextView
        android:id="@+id/tv_not_played_yet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_played_yet"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toEndOf="@+id/pb_progress"
        app:layout_constraintTop_toBottomOf="@+id/pb_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>
