<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="56dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.itis.android_homework.fragments.HomeFragment"
        app:layout_constraintBottom_toTopOf="@+id/guideline_hor_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_hor_bottom"
        app:layout_constraintEnd_toStartOf="@id/img_btn_search"
        app:srcCompat="@drawable/ic_icons8_home" />

    <ImageButton
        android:id="@+id/img_btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_btn_home"
        app:layout_constraintTop_toBottomOf="@id/guideline_hor_bottom"
        app:layout_constraintEnd_toStartOf="@id/img_btn_reels"
        app:srcCompat="@drawable/ic_icons8_search" />

    <ImageButton
        android:id="@+id/img_btn_reels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_hor_bottom"
        app:layout_constraintEnd_toStartOf="@id/img_btn_activity"
        app:layout_constraintStart_toEndOf="@id/img_btn_search"
        app:srcCompat="@drawable/ic_icons8_instagram_reels" />

    <ImageButton
        android:id="@+id/img_btn_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_hor_bottom"
        app:layout_constraintEnd_toStartOf="@id/img_btn_profile"
        app:layout_constraintStart_toEndOf="@+id/img_btn_reels"
        app:srcCompat="@drawable/ic_icon_heart" />

    <ImageButton
        android:id="@+id/img_btn_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_hor_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_btn_activity"
        app:srcCompat="@drawable/ic_user_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>
